@{
    Layout = "_LayoutH";
    @model Wms_stockout
}
@section styles{
    <link rel="stylesheet" href="~/css/bootstrap-select.min.css" />
}
<div id="app" v-cloak>
    <form class="form-horizontal" onsubmit="return false">
        <div class="box-body">
            <div class="form-group">
                <label class="col-sm-2 control-label">出库单编号</label>
                <div class="col-sm-10">
                    <input class="form-control" placeholder="系统自动生成" disabled v-model="StockOutNo" type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">订单号</label>
                <div class="col-sm-10">
                    <input class="form-control" v-model="OrderNo" v-focus type="text">
                </div>
            </div>
            @await Component.InvokeAsync("Dict", YL.Utils.Pub.PubDictType.stockout.ToString())
            <div class="form-group">
                <label class="form-label col-sm-2">客户 </label>
                <div class="col-sm-10">
                    <select size="1" v-model="CustomerId" class="show-menu-arrow show-tick selectpicker form-control" data-live-search="true"></select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">备注</label>
                <div class="col-sm-10">
                    <textarea v-model="Remark" class="form-control" rows="3" placeholder="备注...100个字符以内"></textarea>
                    <p class="textarea-numberbar"><em class="textarea-length">{{count}}</em>/100</p>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <div class="pull-right box-tools">
                <input v-on:click="addL" class="btn btn-primary radius" type="submit" v-model="submit">
            </div>
        </div>
    </form>
</div>

