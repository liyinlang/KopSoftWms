                addL: function () {
                   var _self = this;

                    if (_self.CustomerId.length <= 0) {
                        layer.msg("请选择客户", { icon: 2 });
                        return false;
                    }
                    if (_self.StockoutType.length <= 0) {
                        layer.msg("请选择出库类型", { icon: 2 });
                        return false;
                    }
                    var index = layer.load(1, {
                        shade: [0.1, '#fff'] //0.1透明度的白色背景
                    });
                    var data = {
                        id: _self.StockOutId,
                        CustomerId: _self.CustomerId,
                        StockOutType: _self.StockoutType,
                        OrderNo: _self.OrderNo,
                        Remark: _self.Remark
                    };
                    yui.$axiospostform('/StockOut/AddOrUpdate', data)
                        .then(function (response) {
                            if (response.data.Item1 === 101) {
                                layer.tips(response.data.Item2, '.layui-layer-setwin', {
                                    tips: [1, '#3595CC'],
                                    time: 3000
                                });
                                layer.close(index);
                                return false;
                            }
                            if (response.data.Item1) {
                                layer.msg(response.data.Item2, { icon: 1, time: 1000 });
                                setTimeout(function () {
                                    yui.layer_close3();
                                }, 500);
                            } else {
                                layer.msg(response.data.Item2 || errorMsg, { icon: 5 });
                            }
                            layer.close(index);
                        })
                        .catch(function (error) {
