                });
            },
            methods: {
                searchCustomer: function (val, type) {
                    var _self = this;
                    if (type === 1) {
                        _self.url = "/Customer/Search";
                    } else {
                        _self.url = "/Customer/Search?text=" + val;
                    }
                    yui.$axiosget(_self.url).then(function (res) {
                        _self.CustomerList = res.data.rows;
                        var html = "<option value=''>请选择</option>";
                        for (var item in _self.CustomerList) {
                            html += "<option value='" + _self.CustomerList[item].CustomerId + "' " + "data-subtext='" + _self.CustomerList[item].CustomerNo + "'>" + _self.CustomerList[item].CustomerName + "</option>"
                        }
                        if (type !== 1) {
                            $("#selectpicker").empty();
                        }
                        $(".selectpicker").append(html)
                        $('.selectpicker').selectpicker('refresh');
                        $('.selectpicker').selectpicker('val', _self.CustomerId);
                    }).catch(function (res) {
